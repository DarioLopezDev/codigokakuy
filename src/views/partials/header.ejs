<header>

    <a href="/">

        <div id="logo-principal">
            <img src="/images/Logo3.png" alt="imagenBiblioteca">
        </div>

    </a>

    <div id="area-busqueda">

        <p>CODIGO KAKUY</p>

        <div id="select-div">

            <form action="/" method="get">
                <div class="busqueda-container">
                    <input id="entrada-busqueda-header" type="text" name="busqueda">
                    <button id="boton-busqueda-header" type="submit">
                        <i id="lupaBusqueda" class="fa-solid fa-magnifying-glass"></i>
                    </button>
                </div>
            </form>

        </div>

    </div>

    <div id="darkmode">
        <i class="fa-solid fa-lightbulb"></i>
    </div>

    <div id="login-carrito">

        <ul>
            <% if (locals.isLogged) { %>
                <li><a href="/users/profile">Tu Perfil</a></li>
                <br>
                <li><a href="/users/logout">Cerrar Sesi√≥n</a></li>
                <br>
                <h3>Hola <%= locals.userLogged.username %>, gracias por elegirnos</h3>
                <% } else {%>
                    <li><a href="/products/create">Crear</a></li>
                    <br>
                    <li><a href="/users/login">Login</a></li>
                    <br>
                    <li><a href="/users/register">Register</a></li>
                    <br>
                    <% } %>
        </ul>

    </div>


</header>